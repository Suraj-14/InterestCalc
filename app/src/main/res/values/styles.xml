    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#DD749B</item>
        <item name="colorPrimaryDark">#A8B2E6</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="DialogTheme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:textColorPrimary">#DD749B</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20dp</item>
        <item name="android:background">#A8B2E6</item>
        <item name="android:button">@color/colorAccent</item>
        <item name="buttonBarPositiveButtonStyle">@style/Alert.Button.Positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/Alert.Button.Negative</item>
    </style>

    <style name="Alert.Button.Positive" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:fillColor" tools:targetApi="lollipop">@color/colorl_blue</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="rippleColor">@color/colorAccent</item>
    </style>

    <style name="Alert.Button.Negative" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/colorblue</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginEnd" tools:targetApi="jelly_bean_mr1">8dp</item>
        <item name="rippleColor">@color/colorAccent</item>
    </style>
</resources>
